<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tVChecklistTitle"
        android:layout_width="336dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/days_button"
        android:padding="4dp"
        android:text="example"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnChecklistDelete"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBaseline="@+id/tVChecklistTitle"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:background="@drawable/outline_remove_circle_primary_color_36dp"
        android:onClick="deleteChecklist" />

</RelativeLayout>